 @page "/EditClampsPositioning"
@using System.Dynamic
@using ManufacturingManager.Core.Repositories
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Microsoft.Extensions.Azure
@using ManufacturingManager.Components.UI.MessageBox
@inject IDataEntryRepository _dataEntryRepository
@inject ProtectedSessionStorage SessionStorage
@inject NavigationManager NavigationManager
@* @inject UserLogged CurrentUser *@
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Administrator")]
<PageTitle>Edit Clamps Positioning</PageTitle>
<div class="card border">
    <div class="card-header">
        <div class="row">
            <div class="col">
                <h2 class="text-primary" tabindex="0">@_addEditTitle</h2>
            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="my-4 ms-5 w-50 form-group required">
            <div class="control-label" aria-label="Asterik indicates required" tabindex="0">Indicates required</div>
        </div>

        <EditForm EditContext="_editContext" OnValidSubmit="Save" OnInvalidSubmit="@FocusFirstError">
            <DataAnnotationsValidator />
            <div class="ms-5 w-50 form-group required">
                <label class="fw-bold me-3 control-label" for="CXPX">CXPX</label>
                <InputText class="form-control" id="CXPX" @bind-Value="_clampsPositioning.CXPX" type="text" data-val="true"
                           aria-label="Description.Field required" @ref="_inputCXPX"
                           data-val-length="The field Description must be a string with a maximum length of 50 characters." />
                <div>
                    <ValidationMessage For="@(() => _clampsPositioning.CXPX)"></ValidationMessage>
                </div>
            </div>
            <div class="my-4 ms-5 w-50">
                <label class="fw-bold me-3" for="CX">CX</label>
                <InputNumber class="form-control" id="CX" @bind-Value="_clampsPositioning.CX" type="text" />
                <div>
                    <ValidationMessage For="@(() => _clampsPositioning.CX)"></ValidationMessage>
                </div>
            </div>
            <div class="my-4 ms-5 w-50">
                <label class="fw-bold me-3" for="Clamp1">Clamp1</label>
                <InputNumber class="form-control" id="Clamp1" @bind-Value="_clampsPositioning.Clamp1" type="text" />
                <div>
                    <ValidationMessage For="@(() => _clampsPositioning.Clamp1)"></ValidationMessage>
                </div>
            </div>
            <div class="my-4 ms-5 w-50">
                <label class="fw-bold me-3" for="Clamp2">Clamp2</label>
                <InputNumber class="form-control" id="Clamp2" @bind-Value="_clampsPositioning.Clamp2" type="text" />
                <div>
                    <ValidationMessage For="@(() => _clampsPositioning.Clamp2)"></ValidationMessage>
                </div>
            </div>
            <div class="my-4 ms-5 w-50">
                <label class="fw-bold me-3" for="PX">PX</label>
                <InputNumber class="form-control" id="PX" @bind-Value="_clampsPositioning.PX" type="text" />
                <div>
                    <ValidationMessage For="@(() => _clampsPositioning.PX)"></ValidationMessage>
                </div>
            </div>
            <div class="my-4 ms-5 w-50">
                <label class="fw-bold me-3" for="Clamp3">Clamp3</label>
                <InputNumber class="form-control" id="Clamp3" @bind-Value="_clampsPositioning.Clamp3" type="text" />
                <div>
                    <ValidationMessage For="@(() => _clampsPositioning.Clamp3)"></ValidationMessage>
                </div>
            </div>
            <div class="my-4 ms-5 w-50">
                <label class="fw-bold me-3" for="Clamp4">Clamp4</label>
                <InputNumber class="form-control" id="Clamp4" @bind-Value="_clampsPositioning.Clamp4" type="text" />
                <div>
                    <ValidationMessage For="@(() => _clampsPositioning.Clamp4)"></ValidationMessage>
                </div>
            </div>
            <div class="my-4 ms-5 w-50">
                <label class="fw-bold me-3" for="HoleSetDrilled">HoleSetDrilled</label>
                <InputNumber class="form-control" id="HoleSetDrilled" @bind-Value="_clampsPositioning.HoleSetDrilled" type="text" />
                <div>
                    <ValidationMessage For="@(() => _clampsPositioning.HoleSetDrilled)"></ValidationMessage>
                </div>
            </div>
            @* <div class="input-group ms-5 w-50"> *@
            @*     <label class="fw-bold me-4" for="Active">Active</label> *@
            @*     <InputCheckbox class="form-check " @bind-Value="_category.Active" id="Active"></InputCheckbox> *@
            @*     <label class="form-check-label fst-italic ms-2" for="Active">Check/uncheck this box to make this option active or inactive.</label><br /> *@
            @* </div> *@

            <div class="form-group row mt-5 w-50">
                <div class="col-2"></div>
                <div class="col-auto">
                    <input type="submit" class="btn btn-primary me-5" value="Save" />
                    <input type="button" class="btn btn-default" value="Back to List" @onclick="@ReturnToList" />
                </div>
            </div>
        </EditForm>

    </div>
</div>

@if (_showMessageBox)
{
    <MessageBox MessageBoxParameters="@_messageBoxParameters" OnClose="@MessageBoxClose" />
}
